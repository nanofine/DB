SELECT FIRST_NAME , EMAIL,SALARY,JOB_ID
FROM EMPLOYEES
WHERE JOB_ID LIKE '%CLERK%' AND  SALARY  IN (2500,2800,2900) AND EMAIL LIKE '%S%'
;

SELECT SUBSTR(SUBSTR(FIRST_NAME,1,1) || UPPER(REPLACE(LAST_NAME,' ','')),1,8)
FROM EMPLOYEES
ORDER BY EMPLOYEE_ID
;

